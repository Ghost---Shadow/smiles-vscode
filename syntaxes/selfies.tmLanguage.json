{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SELFIES",
  "scopeName": "source.selfies",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#repeat-macro" },
    { "include": "#definitions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.selfies",
          "match": "#.*$"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "name": "meta.import.selfies",
          "begin": "\\b(import)\\b",
          "end": "$",
          "beginCaptures": {
            "1": { "name": "keyword.control.import.selfies" }
          },
          "patterns": [
            {
              "name": "keyword.control.from.selfies",
              "match": "\\bfrom\\b"
            },
            {
              "name": "constant.language.wildcard.selfies",
              "match": "\\*"
            },
            {
              "name": "string.quoted.double.selfies",
              "begin": "\"",
              "end": "\"",
              "patterns": [
                {
                  "name": "constant.character.escape.selfies",
                  "match": "\\\\."
                }
              ]
            },
            {
              "name": "meta.import-list.selfies",
              "begin": "\\[",
              "end": "\\]",
              "patterns": [
                {
                  "name": "entity.name.type.identifier.selfies",
                  "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                  "name": "punctuation.separator.comma.selfies",
                  "match": ","
                }
              ]
            }
          ]
        }
      ]
    },
    "repeat-macro": {
      "patterns": [
        {
          "name": "meta.function-call.repeat.selfies",
          "begin": "\\b(repeat)\\s*(\\()",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "entity.name.function.macro.selfies" },
            "2": { "name": "punctuation.definition.parameters.begin.selfies" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.parameters.end.selfies" }
          },
          "patterns": [
            {
              "name": "constant.numeric.integer.selfies",
              "match": "\\b\\d+\\b"
            },
            {
              "name": "punctuation.separator.comma.selfies",
              "match": ","
            },
            { "include": "#tokens" }
          ]
        }
      ]
    },
    "definitions": {
      "patterns": [
        {
          "name": "meta.definition.selfies",
          "match": "(\\[)([a-zA-Z_][a-zA-Z0-9_]*)(\\])\\s*(=)",
          "captures": {
            "1": { "name": "punctuation.definition.identifier.begin.selfies" },
            "2": { "name": "entity.name.function.definition.selfies" },
            "3": { "name": "punctuation.definition.identifier.end.selfies" },
            "4": { "name": "keyword.operator.assignment.selfies" }
          }
        },
        { "include": "#tokens" }
      ]
    },
    "tokens": {
      "patterns": [
        {
          "name": "keyword.control.ring.selfies",
          "match": "\\[(?:=)?Ring[1-3]\\]",
          "comment": "Ring closure tokens - special syntax"
        },
        {
          "name": "keyword.control.branch.selfies",
          "match": "\\[(?:=)?Branch[1-3]\\]",
          "comment": "Branch tokens - special syntax"
        },
        {
          "name": "constant.language.atom.selfies",
          "match": "\\[(?:=|#|\\/|\\\\)?([A-Z][a-z]?|[BCNOPSFIbcnosp])\\]",
          "comment": "Chemical elements with or without bond modifiers"
        },
        {
          "name": "constant.language.explicit.selfies",
          "match": "\\[expl[A-Z][a-z]?\\]",
          "comment": "Explicit hydrogen notation"
        },
        {
          "name": "variable.other.reference.selfies",
          "match": "\\[[a-z_][a-zA-Z0-9_]*\\]",
          "comment": "Variable references (lowercase first letter)"
        },
        {
          "name": "invalid.illegal.token.selfies",
          "match": "\\[[^\\]]+\\]",
          "comment": "Invalid or unknown tokens"
        }
      ]
    }
  }
}
